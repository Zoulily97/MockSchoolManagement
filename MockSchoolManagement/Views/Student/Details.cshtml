@model MockSchoolManagement.ViewModels.DetailViewModel 
@{
    ViewData["Title"] = "Student Details";
    var photoPath = "~/images/" + (Model.Student.PhotoPath ?? "noimage.png");
}


<h1>@Model.PageTitle</h1>
<div class=" row justify-content-center m-3">
    <div class="col-sm-6">
        <div class=" card">
            <div class=" card-header ">
                <h1>@Model.Student.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top " src="@photoPath" asp-append-version="true" />
                <h4>学生ID:@Model.Student.Id</h4>
                <h4>学生邮箱：@Model.Student.Email</h4>
                <h4>主修科目:@Model.Student.Major</h4>
            </div>
            <div class="card-footer text-center">
                <div class="btn btn-primary">返回</div>
                <div class="btn btn-primary">编辑</div>
                <div class="btn btn-primary">删除</div>
            </div>
        </div>
    </div>
</div>

