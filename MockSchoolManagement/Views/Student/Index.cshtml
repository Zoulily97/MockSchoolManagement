@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index1";
}

<h1>Index</h1>
<div class="card-deck">
    @foreach (var student in Model)
    {
        var photoPath = "~/images/" + (student.PhotoPath ?? "noimage.png");
        <div class="card m-3">
            <div class="card-header">
                <h3 class="card-title">@student.Name</h3>
            </div>
            <img class="card-img-top " src="@photoPath" asp-append-version="true" />
            <div class="card-body text-center">
                <h5 class="card-title">主修科目：@student.Major</h5>

            </div>
            <div class="card-footer text-center">
                <a asp-controll="Student" asp-action="Details" asp-route-id="@student.Id" class="btn btn-primary">查看</a>
                <a class="btn btn-primary">编辑</a>
                <a class="btn btn-primary">删除</a>
            </div>
        </div>
    }
</div>
